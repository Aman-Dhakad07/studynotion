{
  "name": "studynotion-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "StudyNotion - Monorepo for client and server",
  "scripts": {
    "client": "cd client && npm start",
    "server": "cd server1 && npm run dev",
    "dev": "concurrently -n \"client,server\" -c \"bgBlue,bgYellow\" \"npm run client\" \"npm run server\"",
    "install-client": "cd client && npm install",
    "install-server": "cd server1 && npm install",
    "install-all": "npm run install-client && npm run install-server"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
